import secrets

# Generate a 50-character Django-compatible secret key
secret_key = ''.join(secrets.choice('abcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*(-_=+)') for _ in range(50))

# Save it to a text file
with open('secret_key.txt', 'w') as file:
    file.write(secret_key)

print("Secret key saved to secret_key.txt")